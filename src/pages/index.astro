---
import Layout from '../layouts/Layout.astro';

const packages = [
  {
    name: '@harnessgg/electron',
    bin: 'harness-electron',
    install: 'npm i -D @harnessgg/electron',
    version: '0.1.0',
    status: 'published',
    description: 'Interact with any Electron app through the Chrome DevTools Protocol. Click, type, screenshot, assert â€” all from the CLI with structured JSON output.',
    tags: ['electron', 'cdp', 'playwright', 'debugging'],
    github: 'https://github.com/harnessgg/electron',
    npm: 'https://www.npmjs.com/package/@harnessgg/electron',
    commands: ['connect', 'dom', 'click', 'type', 'screenshot', 'assert', 'evaluate', 'wait'],
  },
];

const comingSoon = [
  { name: '@harnessgg/browser', description: 'Harness any Chromium or Firefox browser tab.' },
  { name: '@harnessgg/desktop', description: 'Control native desktop apps on macOS, Windows, and Linux.' },
  { name: '@harnessgg/terminal', description: 'Interact with terminal emulators and shell sessions.' },
];

// Pre-built HTML for terminal blocks (avoids Astro treating {} as JSX expressions)
const c = (cls: string, text: string) => `<span class="${cls}">${text}</span>`;
const comment = (t: string) => c('t-comment', t);
const cmd = (t: string) => `${c('t-cmd', '$')} ${t}`;
const json = (t: string) => c('t-json', t);
const nl = '\n';

const heroTerminalHtml = [
  comment('# Your agent installs the tool'),
  cmd('npm i -D @harnessgg/electron'),
  nl,
  comment('# Then runs it like any CLI'),
  cmd('harness-electron connect --port 9222'),
  json('&#123;"ok":true,"session":"ses_a1b2","data":&#123;"target":"My Electron App"&#125;&#125;'),
  nl,
  cmd('harness-electron click --role button --name "Sign in"'),
  json('&#123;"ok":true,"session":"ses_a1b2","data":&#123;"selector":"[role=button]"&#125;&#125;'),
  nl,
  cmd('harness-electron assert --kind url --expected "/dashboard"'),
  json('&#123;"ok":true,"session":"ses_a1b2","data":&#123;"actual":"/dashboard"&#125;&#125;'),
].join('\n');

const pkgExampleHtml = [
  comment('# Connect to an Electron app (--inspect-brk or remote-debugging-port)'),
  cmd('harness-electron connect --port 9222'),
  nl,
  comment('# Inspect the DOM'),
  cmd('harness-electron dom --format summary'),
  nl,
  comment('# Interact'),
  cmd('harness-electron type --css "input[name=email]" --value "user@example.com"'),
  cmd('harness-electron click --role button --name "Sign in"'),
  nl,
  comment('# Assert and capture'),
  cmd('harness-electron assert --kind url --expected "/dashboard"'),
  cmd('harness-electron screenshot --path ./artifacts/post-login.png'),
  nl,
  comment('# All output is JSON â€” pipe it, parse it, react to it'),
  cmd("harness-electron dom --format summary | jq '.data.elements'"),
].join('\n');

const agentSnippetHtml = [
  comment('# Option 1: Fetch the discovery index'),
  cmd('curl https://harness.gg/llms.txt'),
  nl,
  comment('# Option 2: Fetch the package registry'),
  cmd('curl https://harness.gg/packages.json'),
  nl,
  comment('# Option 3: npm search'),
  cmd('npm search @harnessgg'),
  nl,
  comment('# Then install whatever you need'),
  cmd('npm i -D @harnessgg/electron'),
  cmd('harness-electron --help'),
].join('\n');
---

<Layout>
  <!-- â”€â”€ NAV â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
  <nav>
    <div class="nav-inner">
      <a class="wordmark" href="/">harness<span>.gg</span></a>
      <div class="nav-links">
        <a href="#packages">Packages</a>
        <a href="#how-it-works">How it works</a>
        <a href="/llms.txt">llms.txt</a>
        <a href="https://github.com/harnessgg" target="_blank" rel="noopener">GitHub</a>
      </div>
    </div>
  </nav>

  <main>
    <!-- â”€â”€ HERO â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <section class="hero">
      <div class="hero-glow" aria-hidden="true"></div>
      <div class="container">
        <div class="badge">
          <span class="badge-dot"></span>
          Open source Â· v0.1.0 Â· MIT
        </div>

        <h1>Give AI agents<br /><em>hands</em>.</h1>

        <p class="hero-sub">
          Open-source CLI packages that let AI agents interact with real apps â€”
          click buttons, fill forms, take screenshots, assert state.
          No MCPs. No servers. No setup. Just&nbsp;<code>npm&nbsp;install</code>.
        </p>

        <div class="hero-terminal">
          <div class="terminal-bar">
            <span class="dot red"></span><span class="dot yellow"></span><span class="dot green"></span>
            <span class="terminal-title">agent task</span>
          </div>
          <pre class="terminal-body" set:html={heroTerminalHtml}></pre>
        </div>

        <div class="hero-actions">
          <a class="btn-primary" href="#packages">Browse packages</a>
          <a class="btn-ghost" href="/llms.txt">llms.txt â†’</a>
        </div>
      </div>
    </section>

    <!-- â”€â”€ WHY â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <section class="why" id="how-it-works">
      <div class="container">
        <h2 class="section-label">The problem</h2>
        <div class="why-grid">
          <div class="why-card why-bad">
            <div class="why-icon">âœ—</div>
            <h3>MCPs require setup</h3>
            <p>Model Context Protocol servers need a running daemon, config files, and IDE integration. An autonomous agent can't set that up mid-task.</p>
          </div>
          <div class="why-card why-bad">
            <div class="why-icon">âœ—</div>
            <h3>Agents are stuck reading</h3>
            <p>AI agents can read and write code beautifully. But they can't click a button, verify a UI state, or debug a running app without help.</p>
          </div>
          <div class="why-card why-good">
            <div class="why-icon">âœ“</div>
            <h3>Harness: just a CLI</h3>
            <p>Any agent that can run a shell command can use Harness. Install once via npm, then call it like any other tool. Output is always machine-readable JSON.</p>
          </div>
        </div>

        <div class="flow">
          <div class="flow-step">
            <div class="flow-num">1</div>
            <div>
              <strong>Agent discovers the package</strong>
              <p>Via llms.txt, npm search, or documentation â€” agents find what's available.</p>
            </div>
          </div>
          <div class="flow-arrow">â†’</div>
          <div class="flow-step">
            <div class="flow-num">2</div>
            <div>
              <strong>Installs with one command</strong>
              <p><code>npm i -D @harnessgg/electron</code> â€” no daemons, no config, no restart.</p>
            </div>
          </div>
          <div class="flow-arrow">â†’</div>
          <div class="flow-step">
            <div class="flow-num">3</div>
            <div>
              <strong>Runs CLI commands</strong>
              <p>Every command returns structured JSON. Agents parse it, react, and continue.</p>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- â”€â”€ PACKAGES â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <section class="packages" id="packages">
      <div class="container">
        <h2 class="section-label">Packages</h2>

        {packages.map(pkg => (
          <article class="pkg-card">
            <div class="pkg-header">
              <div>
                <div class="pkg-name-row">
                  <h3 class="pkg-name">{pkg.name}</h3>
                  <span class="pkg-version">v{pkg.version}</span>
                  <span class="pkg-status published">published</span>
                </div>
                <p class="pkg-desc">{pkg.description}</p>
              </div>
              <div class="pkg-links">
                <a href={pkg.npm} target="_blank" rel="noopener">npm â†—</a>
                <a href={pkg.github} target="_blank" rel="noopener">GitHub â†—</a>
              </div>
            </div>

            <div class="pkg-install">
              <code>{pkg.install}</code>
              <button class="copy-btn" data-copy={pkg.install} aria-label="Copy install command">copy</button>
            </div>

            <div class="pkg-commands">
              <span class="label">Commands</span>
              <div class="cmd-list">
                {pkg.commands.map(cmd => (
                  <code class="cmd-chip">{cmd}</code>
                ))}
              </div>
            </div>

            <div class="pkg-example">
              <pre set:html={pkgExampleHtml}></pre>
            </div>

            <div class="pkg-tags">
              {pkg.tags.map(tag => (
                <span class="tag">{tag}</span>
              ))}
            </div>
          </article>
        ))}

        <!-- Coming soon -->
        <div class="coming-soon">
          <h3>Coming soon</h3>
          <div class="soon-grid">
            {comingSoon.map(pkg => (
              <div class="soon-card">
                <code class="soon-name">{pkg.name}</code>
                <p>{pkg.description}</p>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- â”€â”€ AGENT DISCOVERY â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <section class="discovery">
      <div class="container">
        <h2 class="section-label">For AI agents</h2>
        <p class="discovery-intro">
          Harness is designed so agents can discover and use it <em>autonomously</em> â€”
          no human needs to set anything up.
        </p>

        <div class="discovery-grid">
          <div class="discovery-card">
            <div class="dc-icon">ðŸ“„</div>
            <h4><a href="/llms.txt">/llms.txt</a></h4>
            <p>Machine-readable index of all available packages, commands, and installation instructions. Parseable without a browser.</p>
          </div>
          <div class="discovery-card">
            <div class="dc-icon">ðŸ“¦</div>
            <h4><a href="/packages.json">/packages.json</a></h4>
            <p>Structured JSON registry of every Harness package. Includes install commands, command specs, response schemas, and version info.</p>
          </div>
          <div class="discovery-card">
            <div class="dc-icon">ðŸ”§</div>
            <h4>JSON-first output</h4>
            <p>Every CLI command returns a single JSON object to stdout. No parsing. No scraping. Designed for agents, not humans.</p>
          </div>
          <div class="discovery-card">
            <div class="dc-icon">âš¡</div>
            <h4>Zero config</h4>
            <p>Install the package, run the binary. No daemons to start, no config files to write, no ports to open (beyond your app's CDP port).</p>
          </div>
        </div>

        <div class="agent-snippet">
          <div class="terminal-bar">
            <span class="dot red"></span><span class="dot yellow"></span><span class="dot green"></span>
            <span class="terminal-title">how an agent finds harness</span>
          </div>
          <pre class="terminal-body" set:html={agentSnippetHtml}></pre>
        </div>
      </div>
    </section>

    <!-- â”€â”€ FOOTER â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
    <footer>
      <div class="container footer-inner">
        <div class="footer-left">
          <span class="wordmark">harness<span>.gg</span></span>
          <p>CLI tools for AI agents. Open source, MIT licensed.</p>
        </div>
        <div class="footer-links">
          <a href="https://github.com/harnessgg" target="_blank" rel="noopener">GitHub</a>
          <a href="https://www.npmjs.com/org/harnessgg" target="_blank" rel="noopener">npm</a>
          <a href="/llms.txt">llms.txt</a>
          <a href="/packages.json">packages.json</a>
        </div>
      </div>
    </footer>
  </main>
</Layout>

<script>
  // Copy-to-clipboard for install commands
  document.querySelectorAll('.copy-btn').forEach(el => {
    const btn = /** @type {HTMLButtonElement} */ (el);
    btn.addEventListener('click', () => {
      const text = btn.dataset['copy'] || '';
      navigator.clipboard.writeText(text).then(() => {
        const orig = btn.textContent;
        btn.textContent = 'copied!';
        btn.style.color = 'var(--green)';
        setTimeout(() => {
          btn.textContent = orig;
          btn.style.color = '';
        }, 1800);
      });
    });
  });
</script>

<style>
  /* â”€â”€ Layout â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .container {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 24px;
  }

  /* â”€â”€ Nav â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  nav {
    position: sticky;
    top: 0;
    z-index: 100;
    border-bottom: 1px solid var(--border);
    background: rgba(8, 12, 20, 0.85);
    backdrop-filter: blur(12px);
  }
  .nav-inner {
    max-width: 900px;
    margin: 0 auto;
    padding: 0 24px;
    height: 52px;
    display: flex;
    align-items: center;
    justify-content: space-between;
  }
  .wordmark {
    font-family: var(--mono);
    font-size: 0.95rem;
    font-weight: 600;
    color: var(--text);
    letter-spacing: -0.02em;
    text-decoration: none;
  }
  .wordmark span { color: var(--blue); }
  .nav-links {
    display: flex;
    gap: 24px;
    align-items: center;
  }
  .nav-links a {
    font-size: 0.875rem;
    color: var(--text-2);
    text-decoration: none;
    transition: color 0.15s;
  }
  .nav-links a:hover { color: var(--text); }

  /* â”€â”€ Hero â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .hero {
    position: relative;
    padding: 96px 0 80px;
    overflow: hidden;
  }
  .hero-glow {
    position: absolute;
    top: -120px;
    left: 50%;
    transform: translateX(-50%);
    width: 700px;
    height: 400px;
    background: radial-gradient(ellipse at center, rgba(88,166,255,0.07) 0%, transparent 70%);
    pointer-events: none;
  }
  .badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 4px 12px;
    border: 1px solid var(--border-1);
    border-radius: 100px;
    background: var(--surface-1);
    font-size: 0.75rem;
    color: var(--text-2);
    font-family: var(--mono);
    margin-bottom: 28px;
  }
  .badge-dot {
    width: 6px; height: 6px;
    border-radius: 50%;
    background: var(--green);
    box-shadow: 0 0 6px var(--green);
    animation: pulse 2.5s ease-in-out infinite;
  }
  @keyframes pulse {
    0%, 100% { opacity: 1; }
    50% { opacity: 0.4; }
  }

  h1 {
    font-size: clamp(2.4rem, 6vw, 4rem);
    font-weight: 700;
    line-height: 1.1;
    letter-spacing: -0.03em;
    color: var(--text);
    margin-bottom: 20px;
  }
  h1 em {
    font-style: normal;
    color: var(--blue);
  }
  .hero-sub {
    font-size: 1.05rem;
    color: var(--text-2);
    max-width: 560px;
    line-height: 1.7;
    margin-bottom: 40px;
  }
  .hero-sub code {
    background: var(--surface-1);
    border: 1px solid var(--border);
    padding: 1px 6px;
    border-radius: 4px;
    color: var(--blue);
  }

  .hero-terminal {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
    overflow: hidden;
    margin-bottom: 36px;
    box-shadow: 0 8px 32px rgba(0,0,0,0.4);
  }
  .terminal-bar {
    display: flex;
    align-items: center;
    gap: 6px;
    padding: 10px 14px;
    background: var(--surface-1);
    border-bottom: 1px solid var(--border);
  }
  .dot {
    width: 10px; height: 10px;
    border-radius: 50%;
  }
  .dot.red    { background: #ff5f57; }
  .dot.yellow { background: #febc2e; }
  .dot.green  { background: #28c840; }
  .terminal-title {
    margin-left: 8px;
    font-family: var(--mono);
    font-size: 0.75rem;
    color: var(--text-3);
  }
  .terminal-body {
    padding: 20px 22px;
    font-family: var(--mono);
    font-size: 0.82rem;
    line-height: 1.8;
    overflow-x: auto;
    color: var(--text);
  }
  .t-comment { color: var(--text-3); }
  .t-cmd     { color: var(--green); user-select: none; }
  .t-json    { color: var(--text-2); }

  .hero-actions {
    display: flex;
    gap: 12px;
    flex-wrap: wrap;
  }
  .btn-primary {
    padding: 10px 22px;
    background: var(--blue);
    color: #080c14;
    font-weight: 600;
    font-size: 0.9rem;
    border-radius: var(--radius);
    text-decoration: none;
    transition: opacity 0.15s;
  }
  .btn-primary:hover { opacity: 0.85; text-decoration: none; }
  .btn-ghost {
    padding: 10px 22px;
    border: 1px solid var(--border-1);
    color: var(--text-2);
    font-size: 0.9rem;
    border-radius: var(--radius);
    text-decoration: none;
    transition: border-color 0.15s, color 0.15s;
  }
  .btn-ghost:hover { border-color: var(--blue); color: var(--blue); text-decoration: none; }

  /* â”€â”€ Section label â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .section-label {
    font-size: 0.75rem;
    font-family: var(--mono);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    color: var(--blue);
    margin-bottom: 32px;
  }

  /* â”€â”€ Why â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ */
  .why {
    padding: 80px 0;
    border-top: 1px solid var(--border);
  }
  .why-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
    gap: 16px;
    margin-bottom: 56px;
  }
  .why-card {
    padding: 24px;
    border-radius: var(--radius-lg);
    border: 1px solid var(--border);
    background: var(--surface);
  }
  .why-card.why-bad  { border-color: var(--border); }
  .why-card.why-good { border-color: rgba(63,185,80,0.3); background: rgba(63,185,80,0.04); }
  .why-icon {
    font-size: 1.2rem;
    margin-bottom: 12px;
  }
  .why-card.why-bad  .why-icon { color: var(--text-3); }
  .why-card.why-good .why-icon { color: var(--green); }
  .why-card h3 {
    font-size: 0.95rem;
    font-weight: 600;
    margin-bottom: 8px;
    color: var(--text);
  }
  .why-card p {
    font-size: 0.85rem;
    color: var(--text-2);
    line-height: 1.6;
  }

  .flow {
    display: flex;
    align-items: flex-start;
    gap: 8px;
    flex-wrap: wrap;
  }
  .flow-step {
    display: flex;
    gap: 14px;
    align-items: flex-start;
    flex: 1;
    min-width: 180px;
    padding: 20px;
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: var(--radius-lg);
  }
  .flow-num {
    flex-shrink: 0;
    width: 28px; height: 28px;
    display: flex; align-items: center; justify-content: center;
    background: var(--blue-dim);
    border: 1px solid rgba(88,166,255,0.25);
    border-radius: 50%;
    font-size: 0.75rem;
    font-family: var(--mono);
    color: var(--blue);
    font-weight: 700;
